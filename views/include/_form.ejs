<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <lable for="first name" class="text-dark">First Name</lable>
            <input type="hidden" name="id" value="">
            <input type="text" name="first_name" value="" placeholder="Enter First Name">
        </div>
        <div class="form-group">
            <lable for="last name" class="text-dark">Last Name</lable>
            <input type="text" name="last_name" value="" placeholder="Enter Last Name">
        </div>
        <div class="form-group">
            <lable for="Email" class="text-dark">Email</lable>
            <input type="text" name="email" value="" placeholder="Enter Email ID">
        </div>
        <div class="form-group">
            <lable for="address1" class="text-dark">Address 1</lable>
            <input type="text" name="address1" value="" placeholder="Enter Address1">
        </div>
        <div class="form-group">
            <lable for="address2" class="text-dark">Address 2</lable>
            <input type="text" name="address2" value="" placeholder="Enter Address1">
        </div>
        <div class="form-group">
            <lable for="city" class="text-dark">City</lable>
            <input type="text" name="city" value="" placeholder="Enter City">
        </div>
        <div class="form-group">
            <lable for="postal code" class="text-dark">Postal Code</lable>
            <input type="text" name="postal_code" value="" placeholder="Enter Postal Code">
        </div>
        <div class="form-group">
        <lable for="country" class="text-dark">Country</lable>
        <select id="country" name="country" class="text-dark">
            <option value="india">India</option>
            <option value="canada">Canada</option>
            <option value="USA">USA</option>
            <option value="china">China</option>
            <option value="russia">Russia</option>
        </select>
        </div>
        <div class="form-group">
            <lable for="birthday" class="text-dark">Birthday</lable>
            <input type="date" name="birthday" value="" placeholder="Enter Birthday">
        </div>
        <div class="form-group">
            <lable for="Phone" class="text-dark">Phone Number</lable>
            <input type="tel" name="phone_number" placeholder="Enter Phone Number">
        </div>
        <div class="form-group">
            <lable for="user note" class="text-dark">User Notee</lable>
            <input type="text" name="user_notes" value="" placeholder="Enter User Notes">
        </div>
        <div class="form-group">
            <button type="Submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>